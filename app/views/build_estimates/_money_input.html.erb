<% if hint_text.present? %>
<%= form.govuk_number_field field,
                            width:,
                            hint: { text: hint_text },
                            label: { text: label_text, size: "m" },
                            prefix_text: BuildEstimatesHelper::POUND %>
<% else %>
<%= form.govuk_number_field field,
                            width:,
                            hint: { text: hint_text },
                            label: { text: label_text },
                            prefix_text: BuildEstimatesHelper::POUND %>
<% end %>
