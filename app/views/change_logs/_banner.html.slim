.moj-banner role="region" aria-label="information"
    svg.moj-banner__icon[fill="currentColor"
                         role="presentation"
                         focusable="false"
                         xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 25 25"
                         height="25"
                         width="25"]
      path d=exclamation_mark_path
    .moj-banner__message
      = render "change_logs/banner_texts/#{change_log[:key]}", live: Time.current.beginning_of_day >= change_log[:change_on]
