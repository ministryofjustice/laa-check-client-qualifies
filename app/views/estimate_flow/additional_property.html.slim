- content_for :page_title
  = t(".legend")
- content_for :back
  = back_link(:additional_property, @check, @back_buttons_invoke_browser_back_behaviour)

.govuk-grid-column-two-thirds
  = form_for(@form, url: wizard_path, method: :put) do |form|
    = form.govuk_error_summary t("generic.error_summary_title")
    = form.govuk_collection_radio_buttons :property_owned, property_options, :first, :last,
                                          legend: { text: t(".legend"), size: "xl", tag: "h1" },
                                          hint: lambda { \
                                                  tag.p(t(".hint"), class: "govuk-hint") + \
                                                  (@check.partner ? tag.p(t(".partner_hint"), class: "govuk-hint") : "") \
                                                }

    = form.govuk_submit t("generic.save_and_continue")
= render "property_sidebar", level_of_help: @check.level_of_help, smod_applicable: @check.smod_applicable?
