- content_for :page_title
  = t(".heading")
- content_for :back
  = back_link(:additional_property_details, @check, @back_buttons_invoke_browser_back_behaviour)

.govuk-grid-column-two-thirds
  = form_for(@form, url: wizard_path, method: :put) do |form|

    = form.govuk_error_summary t("generic.error_summary_title")
    = render "shared/heading",
             header_text: t(".heading"),
             post_header_text: (t(".hint") if @check.partner)

    = render "shared/money_input",
            form:,
            field: :house_value,
            width: 10,
            size: "m",
            label_text: t(".house_value.input")

    - if @form.owned_with_mortgage?
      = render "shared/money_input_with_hint",
              form:,
              field: :mortgage,
              width: 10,
              label_text: t(".mortgage.input"),
              hint_text: t(".mortgage.input_hint")

    = render "shared/percentage_input",
              form:,
              field: :percentage_owned,
              width: 3,
              label_text: t(".percentage_owned.input"),
              size: "m",
              hint_text: (t(".percentage_owned.input_hint") if @check.partner)

    - if @check.smod_applicable?
      .govuk-form-group
        = form.govuk_check_box :house_in_dispute, true, 0,
                multiple: false,
                label: { text: t("generic.dispute") }

      = render "smod_help"

    = form.govuk_submit t("generic.save_and_continue")

= render "property_sidebar", level_of_help: @check.level_of_help, smod_applicable: @check.smod_applicable?
