- content_for :page_title
  = t(".legend")
- content_for :back do
  = back_link(:assets, @estimate, @back_buttons_invoke_browser_back_behaviour)

.govuk-grid-column-two-thirds
  = render "estimate_flow/forms/assets",
           i18n_key: "assets",
           show_smod_content: true,
           hints: ([t("estimate_flow.assets.partner_hint"), t("estimate_flow.assets.partner_second_hint")] if @estimate.partner)

= render "shared/sidebar_with_date", \
  links: { t("estimate_flow.assets.guidance.text") => t("estimate_flow.assets.guidance.link"), \
    t(".other_properties_guidance.text") => t(".other_properties_guidance.link"), \
    t(".disregarded_capital_guidance.text") => t(".disregarded_capital_guidance.link"), \
    t("generic.smod.guidance.text") => t("generic.smod.guidance.certificated_link"), \
  }
