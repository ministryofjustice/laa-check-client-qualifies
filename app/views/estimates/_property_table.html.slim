h2 class="govuk-heading-#{caption_size}" = t("estimates.show.#{person}_#{type}")
= govuk_table do |table|
  - table.with_body do |body|
    - case data[:type]
    - when :fully_owned
      - data[:rows].each do |key, value|
        ruby:
          alt_text = (key == :main_home_disregard && data.dig(:rows, :smod_allowance)) || (key == :value && type == :additional_property)
          text_key = alt_text ? "alt_text" : "text"
          text = header_with_hint("estimates.show.property_rows.#{key}.#{text_key}", "estimates.show.property_rows.#{key}.hint")
        - body.with_row do |row|
          - row.with_cell(header: true, text:)
          - row.with_cell(text: value, html_attributes: { class: "govuk-!-text-align-right" })
      - body.with_row(classes: %w[solid-top-border]) do |row|
        - row.with_cell(header: true, text: t("estimates.show.property_rows.equity.text"))
        - row.with_cell(classes: %w[govuk-!-font-weight-bold govuk-!-text-align-right], text: assessed_value)
    - when :partially_owned
      - data[:upper_rows].each do |key, value|
        - text_key = key == :value && type == :additional_property ? "alt_text" : "text"
        - text = header_with_hint("estimates.show.property_rows.#{key}.#{text_key}", "estimates.show.property_rows.#{key}.hint")
        - body.with_row do |row|
          - row.with_cell(header: true, text:)
          - row.with_cell(text: value, html_attributes: { class: "govuk-!-text-align-right" })
      - body.with_row(classes: %w[solid-top-border]) do |row|
        - row.with_cell(header: true, text: t("estimates.show.property_rows.net_equity.text", percentage: data[:percentage_owned].round))
        - row.with_cell(text: data[:net_equity], html_attributes: { class: "govuk-!-text-align-right" })
      - data[:lower_rows].each do |key, value|
        - text_key = key == :main_home_disregard && data.dig(:lower_rows, :smod_allowance) ? "alt_text" : "text"
        - text = header_with_hint("estimates.show.property_rows.#{key}.#{text_key}", "estimates.show.property_rows.#{key}.hint")
        - body.with_row do |row|
          - row.with_cell(header: true, text:)
          - row.with_cell(text: value, html_attributes: { class: "govuk-!-text-align-right" })
      - body.with_row(classes: %w[solid-top-border]) do |row|
        - row.with_cell(header: true, text: t("estimates.show.property_rows.equity.text"))
        - row.with_cell(classes: %w[govuk-!-font-weight-bold govuk-!-text-align-right], text: assessed_value)
    - when :partially_owned_minimal
      - data[:rows].each do |key, value|
        ruby:
          alt_text = (key == :main_home_disregard && data.dig(:rows, :smod_allowance)) || (key == :value && type == :additional_property)
          text_key = alt_text ? "alt_text" : "text"
          text = header_with_hint("estimates.show.property_rows.#{key}.#{text_key}", "estimates.show.property_rows.#{key}.hint")
        - body.with_row do |row|
          - row.with_cell(header: true, text:)
          - row.with_cell(text: value, html_attributes: { class: "govuk-!-text-align-right" })
      - body.with_row(classes: %w[solid-top-border]) do |row|
        - row.with_cell(header: true, text: header_with_hint("estimates.show.property_rows.equity.text",
                                                        "estimates.show.property_rows.equity.partial_#{person}_hint",
                                                        hint_args: { percentage: data[:percentage_owned].round }))
        - row.with_cell(classes: %w[govuk-!-font-weight-bold govuk-!-text-align-right], text: assessed_value)
